#include <stdio.h>
#include <conio.h>

void main()
{
    int n1, n2, result;
    char op;

    printf("Enter an operator (+, -, *, /): ");
    scanf("%c", &op);

    printf("Enter two integers: ");
    scanf("%d%d", &n1, &n2);

    switch(op)
    {
        case '+':
            result = n1 + n2;
            printf("Result: %d", result);
            break;

        case '-':
            result = n1 - n2;
            printf("Result: %d", result);
            break;

        case '*':
            result = n1 * n2;
            printf("Result: %d", result);
            break;

        case '/':
            if(n2 != 0)
            {
                printf("Result: %d", n1 / n2);
            }
            else
            {
                printf("Cannot divide by zero");
            }
            break;

        default:
            printf("Invalid operator");
    }
}
