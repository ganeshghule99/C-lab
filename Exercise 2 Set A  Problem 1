#include <stdio.h>

int main() {
    float r, h, surface_area, volume;
    float pi = 3.14;

    printf("Enter radius and height of cylinder: ");
    scanf("%f %f", &r, &h);

    surface_area = 2 * pi * r * r + 2 * pi * r * h;
    volume = pi * r * r * h;

    printf("Surface Area: %.2f\n", surface_area);
    printf("Volume: %.2f\n", volume);

    return 0;
}
