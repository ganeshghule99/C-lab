#include <stdio.h>
#include <conio.h>

void main()
{
    int q1, q2, q3;
    float r1, r2, r3, total, discount, net_amt;
    
    printf("Enter quantity and rate for item 1: ");
    scanf("%d%f", &q1, &r1);
    
    printf("Enter quantity and rate for item 2: ");
    scanf("%d%f", &q2, &r2);
    
    printf("Enter quantity and rate for item 3: ");
    scanf("%d%f", &q3, &r3);
    
    total = (q1 * r1) + (q2 * r2) + (q3 * r3);
    printf("Total Sales Amount: %.2f\n", total);
    
    if(total > 10000)
    {
        discount = total * 0.20; 
    }
    else if(total >= 5000 && total <= 10000)
    {
        discount = total * 0.15;
    }
    else
    {
        discount = total * 0.08;
    }
    
    net_amt = total - discount;
    
    printf("Discount: %.2f\n", discount);
    printf("Net Amount to pay: %.2f", net_amt);
}
