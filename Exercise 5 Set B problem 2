#include <stdio.h>
#include <conio.h>

void main()
{
    float x, sum = 0, term;
    int n, i;
    
    printf("Enter x: ");
    scanf("%f", &x);
    printf("Enter number of terms n: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++)
    {
        term = (2 * i - 1) * x;
        sum = sum + term;
    }
    
    printf("Sum of series is: %.2f", sum);
}

