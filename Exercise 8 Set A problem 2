#include <stdio.h>

int main() {
    float r1, i1, r2, i2;
    int choice;

    printf("Enter 1st complex (real imag): ");
    scanf("%f %f", &r1, &i1);
    printf("Enter 2nd complex (real imag): ");
    scanf("%f %f", &r2, &i2);

    printf("\n1. ADD\n2. SUBTRACT\n3. MULTIPLY\nEnter choice: ");
    scanf("%d", &choice);

    if(choice == 1) printf("Sum: %.2f + %.2fi", r1+r2, i1+i2);
    else if(choice == 2) printf("Diff: %.2f + %.2fi", r1-r2, i1-i2);
    else if(choice == 3) printf("Prod: %.2f + %.2fi", (r1*r2 - i1*i2), (r1*i2 + r2*i1));
    
    return 0;
}

