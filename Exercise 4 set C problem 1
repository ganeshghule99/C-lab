
#include <stdio.h>
#include <conio.h>

void main()
{
    int d, m, y, is_leap = 0, valid = 1;

    printf("Enter date (dd mm yyyy): ");
    scanf("%d%d%d", &d, &m, &y);

    if(y < 1)
    {
        valid = 0;
    }
    else
    {
        if((y % 4 == 0 && y % 100 != 0) || (y % 400 == 0))
            is_leap = 1;

        if(m < 1 || m > 12)
        {
            valid = 0;
        }
        else if(d < 1)
        {
            valid = 0;
        }
        else if(m == 2)
        {
            if(is_leap == 1 && d > 29)
                valid = 0;
            else if(is_leap == 0 && d > 28)
                valid = 0;
        }
        else if(m == 4 || m == 6 || m == 9 || m == 11)
        {
            if(d > 30)
                valid = 0;
        }
        else
        {
            if(d > 31)
                valid = 0;
        }
    }

    if(valid == 1)
        printf("The date is valid");
    else
        printf("The date is invalid");
}
